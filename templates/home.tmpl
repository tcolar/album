<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Album</title>

    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/foundation.min.css">

    <script src="/js/vendor/modernizr.js"></script>
</head>
<body style="background-color:#333;color:#fdfdfd">

<div class="container">
{{range .albums}}
    <div class="small-6 medium-4 large-2 columns" style="text-align:center;margin-bottom:20px;">
    <span>{{.Name}}</span><br/>
    <a href="{{.Path}}/"><img src="/_scaled/thumb/{{.HighlightPic}}"></a>
    </div>
{{end}}
</div>

<div class="container">
<ul class="clearing-thumbs" data-clearing>
{{range .pics}}
  <li><a href="{{index . 0}}"><img src="{{index . 1}}"></a></li>
{{end}}
</ul>
</div>


<script src="/js/vendor/jquery.js"></script>
<script src="/js/foundation.min.js"></script>
<script src="/js/foundation/foundation.clearing.js"></script>
<script src="/js/foundation/foundation.topbar.js"></script>
<script>
    $(document).foundation();
</script>
</body>
</html>